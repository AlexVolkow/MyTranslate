<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.volkov.alexandr.mytranslate.ui.history.HistoryManagerFragment">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/history_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginEnd="0dp" android:layout_marginBottom="5dp">

    </android.support.v7.widget.RecyclerView>
    <TextView
            android:text="@string/empty_history"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerInParent="false"
            android:layout_centerHorizontal="true" android:layout_centerVertical="true"
            android:textAlignment="center" android:id="@+id/tv_empty_history" android:textSize="20sp"/>
</RelativeLayout>