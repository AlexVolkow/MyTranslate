<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/lang_item"
                android:gravity="center"
                android:layout_height="50dp" android:layout_margin="10dp">

    <ImageView
            android:layout_width="24dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_check"
            android:id="@+id/iv_check" android:visibility="invisible" android:layout_centerHorizontal="true"/>
    <TextView
            android:id="@+id/tv_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Русский"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textAlignment="viewStart" android:layout_alignTop="@+id/iv_check"
            android:layout_alignParentStart="true" android:textSize="17sp"/>
</RelativeLayout>